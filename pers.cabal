name:                pers
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            http://github.com/odr/pers#readme
license:             BSD3
license-file:        LICENSE
author:              Dmitry Olshansky
maintainer:          olshanskydr@gmail.com
copyright:           BSD3
category:            persistent, web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:      Pers.Types
                        , Pers.Database.DDL
                        , Pers.Database.DML
                        , Pers.Database.Sqlite.Sqlite
                        , Pers.Servant.Servant
                        , Pers.Servant.Simple
  build-depends:       base >= 4.8 && < 5
                        , ghc-prim >= 0.4
                        , data-default
                        , microlens
                        -- , lens
                        , text
                        , text-format
                        , bytestring
                        , direct-sqlite
                        , transformers
                        , exceptions
                        -- , singletons
                        --
                        , servant
                        , servant-server
                        -- , transformers
                        , mtl
                        , either
                        , aeson
                        , attoparsec
                        , string-conversions
                        , time
                        , http-media
                        , wai
                        , warp
                        , directory
                        , blaze-markup
                        , blaze-html
                        , lucid
                        , servant-lucid
                        , unordered-containers
  default-language:    Haskell2010

executable pers-exe
  hs-source-dirs:      app
  main-is:             Main.hs

  ghc-options:         -O2 -threaded -rtsopts -with-rtsopts=-N -fcontext-stack=200 +RTS -s -A128M -RTS
  build-depends:       base
                        , ghc-prim >= 0.4
                        , microlens
                        -- , lens
                        , pers
                        , text
                        , transformers
                        , exceptions
                        , servant
                        , servant-server
                        , either
                        , warp
  default-language:    Haskell2010

test-suite pers-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , pers
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -fcontext-stack=200
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/odr/pers
